		var keyword;
		if(section == 'recieved' || section == 'del') {
			keyword = {category: 'rd', key: msgKey};
			$('#sorc').text("발신");
		}
		if(section == 'sent') {
			keyword = {category: 's', key: msgKey}
			$('#sorc').text("수신");
		}
		$.ajax({
			type: 'GET',
			url: 'getMessageDetail.do',
